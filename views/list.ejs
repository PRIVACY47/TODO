<%- include("header") -%>

  <div class="box" id="heading">
    <h1>
      <%= listTitle %>
    </h1>
  </div>


  <div class="box">
    <% newListItems.forEach((itms)=>{ %>
      <form action="delete" method="post">
        <div class="item">
          <input type="checkbox" name="checkbox" value="<%= itms._id%>" onChange="this.form.submit()">
          <p>
            <%= itms.name%>
          </p>
        </div>
      </form>
      <%})%>

        <form class="item" action="/" method="post">
          <input type="text" name="newWork" placeholder="New Item" autocomplete="off">
          <button type="submit" name="find">+</button>
        </form>
  </div>
  </div>

  <%- include("footer") -%>